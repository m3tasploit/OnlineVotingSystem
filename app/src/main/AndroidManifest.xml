<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onlinevotingsystem">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="eVOTE"
        android:roundIcon="@mipmap/appicon"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NotificationView"></activity>
        <activity android:name=".Capturephoto" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" />
        <activity android:name=".Postview" />
        <activity android:name=".ViewWinner" />
        <activity android:name=".CastVote" />
        <activity android:name=".ViewCandidate" />
        <activity android:name=".ViewProfile" />
        <activity android:name=".IpSet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".MainActivity" />
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>

</manifest>